<% layout("/layouts/boilerplate") %>
<h3>Search results for "<%= location %>"</h3>

<div class="row">
  <% if (listings.length > 0) { %>
    <% listings.forEach(list => { %>
      <div class="col-4 mb-3">
        <a href="/listings/<%= list._id %>" class="text-decoration-none text-dark">
        <div class="card h-100" style="cursor: pointer;">
            <img src="<%= list.image.url %>" class="card-img-top card-img-fixed" alt="<%= list.title %>" style="height: 200px; object-fit: cover;">
            <div class="card-body">
            <h5 class="card-title"><%= list.title %></h5>
            <p class="card-text"><%= list.location %></p>
            <p class="card-text"> &#x20b9; <%= list.price.toLocaleString('en-IN') %>/night </p>
            </div>
        </div>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p>No listings found for this location.</p>
  <% } %>
</div>